@model ShopPhone.Models.Login

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="shadow p-5 rounded bg-white" style="width: 400px;">
        <h3 class="text-center text-danger fw-bold mb-4">Đăng nhập vào Shop Phone</h3>

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-danger w-100 fw-bold">Đăng nhập</button>

            <a asp-controller="Account" asp-action="ForgotPassword" class="text-decoration-none">Quên mật khẩu?</a>

            <div class="text-center mt-2">
                <span>Bạn chưa có tài khoản? </span>
                <a asp-controller="Account" asp-action="Register" class="text-primary text-decoration-none">Đăng ký ngay</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
