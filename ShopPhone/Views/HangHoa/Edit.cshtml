@model ShopPhone.Models.HangHoa
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Chỉnh Sửa Sản Phẩm: @Model.TenHH
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input asp-for="MaHH" type="hidden" />
                        
                        <div class="row">
                            <!-- Cột trái -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TenHH" class="form-label">Tên sản phẩm *</label>
                                    <input asp-for="TenHH" class="form-control">
                                    <span asp-validation-for="TenHH" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="TenAlias" class="form-label">Tên alias (URL)</label>
                                    <input asp-for="TenAlias" class="form-control">
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="MaLoai" class="form-label">Mã loại *</label>
                                            <select asp-for="MaLoai" class="form-select">
                                                <option value="1">iPhone</option>
                                                <option value="2">Samsung</option>
                                                <option value="3">Xiaomi</option>
                                                <option value="4">OnePlus</option>
                                                <option value="5">Khác</option>
                                            </select>
                                            <span asp-validation-for="MaLoai" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="MoTaDonVi" class="form-label">Đơn vị *</label>
                                            <input asp-for="MoTaDonVi" class="form-control">
                                            <span asp-validation-for="MoTaDonVi" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="DonGia" class="form-label">Đơn giá (VNĐ) *</label>
                                            <input asp-for="DonGia" type="number" class="form-control" min="0" step="1000">
                                            <span asp-validation-for="DonGia" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="GiamGia" class="form-label">Giảm giá (%)</label>
                                            <input asp-for="GiamGia" type="number" class="form-control" min="0" max="100" step="0.1">
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="NgaySX" class="form-label">Ngày sản xuất *</label>
                                    <input asp-for="NgaySX" type="date" class="form-control">
                                    <span asp-validation-for="NgaySX" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Thống kê</label>
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-control-plaintext">
                                                <strong>Lượt xem:</strong> @(Model.SoLanXem ?? 0)
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-control-plaintext">
                                                <strong>Đánh giá:</strong> @(Model.DanhGia?.ToString("0.1") ?? "Chưa có") ⭐
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Cột phải -->
                            <div class="col-md-6">
                                <!-- Hình ảnh hiện tại -->
                                @if (!string.IsNullOrEmpty(Model.Hinh))
                                {
                                    <div class="mb-3">
                                        <label class="form-label">Hình ảnh hiện tại</label>
                                        <div class="text-center">
                                            <img src="~/images/@Model.Hinh" alt="@Model.TenHH" 
                                                 class="img-thumbnail" style="max-width: 200px; max-height: 200px;">
                                        </div>
                                    </div>
                                }

                                <div class="mb-3">
                                    <label asp-for="FileHinh" class="form-label">Cập nhật hình ảnh chính</label>
                                    <input asp-for="FileHinh" type="file" class="form-control" accept="image/*">
                                    <small class="form-text text-muted">Để trống nếu không muốn thay đổi</small>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="FileHinhMoHop" class="form-label">Cập nhật hình mở hộp</label>
                                    <input asp-for="FileHinhMoHop" type="file" class="form-control" accept="image/*">
                                    @if (!string.IsNullOrEmpty(Model.HinhMoHop))
                                    {
                                        <small class="text-success">Đã có: @Model.HinhMoHop</small>
                                    }
                                </div>

                                <div class="mb-3">
                                    <label asp-for="FileHinhThucTe" class="form-label">Cập nhật hình thực tế</label>
                                    <input asp-for="FileHinhThucTe" type="file" class="form-control" accept="image/*">
                                    @if (!string.IsNullOrEmpty(Model.HinhThucTe))
                                    {
                                        <small class="text-success">Đã có: @Model.HinhThucTe</small>
                                    }
                                </div>

                                <div class="mb-3">
                                    <label asp-for="VideoId" class="form-label">Video ID (YouTube)</label>
                                    <input asp-for="VideoId" class="form-control" placeholder="dQw4w9WgXcQ">
                                    <small class="form-text text-muted">Chỉ nhập ID của video YouTube</small>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="MaNCC" class="form-label">Mã nhà cung cấp</label>
                                    <input asp-for="MaNCC" class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label asp-for="DanhGia" class="form-label">Đánh giá (1-5 sao)</label>
                                    <input asp-for="DanhGia" type="number" class="form-control" min="1" max="5" step="0.1">
                                </div>
                            </div>
                        </div>

                        <!-- Mô tả -->
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="MoTa" class="form-label">Mô tả sản phẩm</label>
                                    <textarea asp-for="MoTa" class="form-control" rows="5"></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Nút hành động -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                                    </a>
                                    <div>
                                        <a asp-action="ChiTiet" asp-route-id="@Model.MaHH" 
                                           class="btn btn-info me-2" target="_blank">
                                            <i class="fas fa-eye me-1"></i>Xem trước
                                        </a>
                                        <button type="submit" class="btn btn-warning">
                                            <i class="fas fa-save me-1"></i>Cập nhật
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Preview ảnh khi chọn file mới
        $('input[type="file"]').on('change', function() {
            var input = this;
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var preview = $(input).siblings('.image-preview');
                    if (preview.length === 0) {
                        preview = $('<img class="image-preview mt-2" style="max-width: 200px; max-height: 200px; border: 1px solid #ddd; padding: 5px;">');
                        $(input).after(preview);
                    }
                    preview.attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        });

        // Tự động cập nhật alias khi thay đổi tên
        $('#TenHH').on('input', function() {
            var alias = $(this).val()
                .toLowerCase()
                .replace(/[àáạảãâầấậẩẫăằắặẳẵ]/g, 'a')
                .replace(/[èéẹẻẽêềếệểễ]/g, 'e')
                .replace(/[ìíịỉĩ]/g, 'i')
                .replace(/[òóọỏõôồốộổỗơờớợởỡ]/g, 'o')
                .replace(/[ùúụủũưừứựửữ]/g, 'u')
                .replace(/[ỳýỵỷỹ]/g, 'y')
                .replace(/đ/g, 'd')
                .replace(/[^a-z0-9]/g, '-')
                .replace(/-+/g, '-')
                .replace(/^-|-$/g, '');
            $('#TenAlias').val(alias);
        });
    </script>
}
