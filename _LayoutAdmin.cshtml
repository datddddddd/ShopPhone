@{
    ViewData["Title"] = "Admin Panel";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: row;
            margin: 0;
        }

        .sidebar {
            width: 250px;
            background-color: #1f2d3d;
            color: #fff;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            padding-top: 60px;
            box-shadow: 2px 0 8px rgba(0,0,0,0.1);
        }

            .sidebar .nav-link {
                color: #cfd8dc;
                padding: 15px 25px;
                font-weight: 500;
                transition: 0.3s;
            }

                .sidebar .nav-link.active,
                .sidebar .nav-link:hover {
                    background-color: #34495e;
                    color: #ffffff;
                    border-left: 4px solid #00bcd4;
                }

            .sidebar h4 {
                font-size: 1.5rem;
                font-weight: bold;
            }

        .content {
            margin-left: 250px;
            padding: 20px;
            width: calc(100% - 250px);
            background-color: #f8f9fa;
        }

        .navbar {
            z-index: 1000;
        }

        .navbar-brand {
            font-weight: 600;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar d-flex flex-column">
        <div class="text-center mb-4">
            <a class="nav-link" asp-controller="Home" asp-action="Index">Quản lý sản phẩm</a>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link @(ViewData["Active"] == "Orders" ? "active" : "")" href="/Admin/Orders">
                    <i class="fas fa-receipt me-2"></i> Quản lý đơn hàng
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewData["Active"] == "Feedback" ? "active" : "")" href="/Admin/Feedbacks">
                    <i class="fas fa-envelope-open-text me-2"></i> Phản hồi người dùng
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewData["Active"] == "Stats" ? "active" : "")" href="/Admin/Statistics">
                    <i class="fas fa-chart-line me-2"></i> Thống kê
                </a>
            </li>
            <li class="nav-item mt-4">
                <a class="nav-link text-danger" href="/Account/Logout">
                    <i class="fas fa-sign-out-alt me-2"></i> Đăng xuất
                </a>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="content">
        <nav class="navbar navbar-expand navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Trang quản trị</a>
            </div>
        </nav>

        <div class="mt-5 pt-4">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>